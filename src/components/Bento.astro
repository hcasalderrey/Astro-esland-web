---
import { getI18N } from "@/i18n";
import BentoItem from "./BentoItem.astro";

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })


---

<section
  class={`
    w-full max-w-[1400px]
    grid lg:grid-cols-10 auto-rows-[35rem] gap-4
    mx-auto p-6 md:p-12 lg:p-20
`}
>
  <BentoItem
    class="col-span-10 lg:col-span-4"
    title={i18n.BENTO_TITLE_1}
  >
    <div
      slot="image"
      class="absolute left-0 top-0 buttom-0 -z-10 h-full w-full
       bg-blue-950 group-hover:scale-110 transition-scale duration-1000
        ease-in-out opacity-90 bg-center bg-blend-luminosity bg-cover bg-no-repeat"
      style="background-image: url('./mountain.webp')"
    >
    </div>
    <p  slot="content" class="max-w-xl" set:html={i18n.BENTO_CONTENT_1} />
   
  </BentoItem>
  <BentoItem
    class="col-span-10 lg:col-span-6"
    title={i18n.BENTO_TITLE_2}
    subtitle={i18n.BENTO_SUBTITLE_2}
  >
    <div
      slot="image"
      class="absolute left-0 top-0 buttom-0 -z-10 h-full w-full
       bg-blue-800 group-hover:scale-110 transition-scale duration-1000
        ease-in-out opacity-90 bg-center bg-blend-luminosity bg-cover bg-no-repeat"
      style="background-image: url('./pistas.webp')" >
    </div>

    <p  slot="content"  set:html={i18n.BENTO_CONTENT_2} />
  </BentoItem>
  <BentoItem
    class="col-span-10 lg:col-span-6"
    title={i18n.BENTO_TITLE_3}
    subtitle={i18n.BENTO_SUBTITLE_3}
  >
    <div
      slot="image"
      class="absolute left-0 top-0 buttom-0 -z-10 h-full w-full
       bg-blue-900 group-hover:scale-110 transition-scale duration-1000
        ease-in-out opacity-90 bg-center bg-blend-luminosity bg-cover bg-no-repeat"
      style="background-image: url('./grefg.webp')">
    </div>

    <p  slot="content"  set:html={i18n.BENTO_CONTENT_3} />
      
    </BentoItem>
    <BentoItem  class="col-span-10 lg:col-span-4"
    title={i18n.BENTO_TITLE_4}>
      <div
        slot="image"
        class="absolute left-0 top-0 buttom-0 -z-10 h-full w-full
         bg-blue-950 group-hover:scale-110 transition-scale duration-1000
          ease-in-out opacity-90 bg-center bg-blend-luminosity bg-cover bg-no-repeat"
        style="background-image: url('./laptop.webp')"
      >
    </div>
    <p  slot="content"  set:html={i18n.BENTO_CONTENT_4} />
    </BentoItem>
  </BentoItem>
</section>
